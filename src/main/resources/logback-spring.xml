<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="GRAYLOG" class="de.siegmar.logbackgelf.GelfUdpAppender">
        <graylogHost>${GRAYLOG_HOST:graylog}</graylogHost>
        <graylogPort>${GRAYLOG_PORT:12201}</graylogPort>

        <useCompression>true</useCompression>

        <encoder class="de.siegmar.logbackgelf.GelfEncoder">
            <includeRawMessage>true</includeRawMessage>
            <includeLevelName>true</includeLevelName>
            <includeLoggerName>true</includeLoggerName>
            <includeThreadName>true</includeThreadName>
        </encoder>

        <additionalField>app=modulo1-pessoas</additionalField>
        <additionalField>env=dev</additionalField>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="GRAYLOG"/>
    </root>

</configuration>
